doctype html
head
  meta(charset="utf-8")
  title NotITunes

  link(rel="stylesheet", href="/css/main.css")
body
  h1 not iTunes

  ul
    each link in nav
      li: a(href= link.url)= link.title

  p= user.username

  div.playlist-container
    each playlist in playlists
      - var src = playlist.cover || "http://cdn3-www.cattime.com/assets/uploads/2011/08/best-kitten-names-1.jpg";

      div
        div: img(src=src)
        h3= playlist.title
        p= playlist.description

  p: a(href="/signout") Sign out