doctype html
head
  meta(charset="utf-8")
  title NotITunes

  link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Lato:400,700")
  link(rel="stylesheet", href="/css/common.css")
  link(rel="stylesheet", href="/css/header.css")
  link(rel="stylesheet", href="/css/create-playlist.css")
body
  header
    nav
      h1 not iTunes
      ul
        li: a(href="/") Playlists
        li.active + Add playlist
        li: a(href="/add-songs") + Add songs

      a(href="/signout") Sign out

  form#add-playlist(action="/playlist", method="POST")
    label(for="pl-title") Playlist title*
    input#pl-title(type="text", name="pl-title", required)

    label(for="pl-description") Description*
    input#pl-description(type="text", name="pl-description", required)

    div.cover-preview

    div.preview-source
      input#url(type="radio", name="cover-type", value="url", checked)
      label(for="url") URL

      input#file(type="radio", name="cover-type", value="file")
      label(for="file") Upload
      br
      br

      input.cover(type="text", name="cover-url")
      button#load-preview(type="button") Load

      div.file-container
        label Select file
          input.cover(type="file", name="cover-file")
    button#create-playlist(type="submit") Add Playlist

  script(src="/js/create-playlist.js")